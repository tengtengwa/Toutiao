<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="newsList"
            type="com.example.toutiao.logic.model.NewsModel.NewsList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/tv_item2_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginEnd="15dp"
            android:text="@{newsList.title}"
            android:textColor="@color/colorBlack"
            android:textSize="@string/text_size"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item2_image"
            app:layout_constraintEnd_toStartOf="@+id/iv_item2_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_item2_image"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            loadImage="@{newsList.bigImage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item2_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{newsList.source}"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_item2_image" />

        <TextView
            android:id="@+id/tv_item2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{newsList.time}"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_item2_author"
            app:layout_constraintTop_toTopOf="@+id/tv_item2_author" />

        <ImageView
            android:id="@+id/ib_item2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_del"
            android:onClick=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item2_time" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_item2_time"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/tv_item2_author"
            tools:layout_editor_absoluteX="75dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

