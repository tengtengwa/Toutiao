<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="newsList"
            type="com.example.toutiao.logic.model.NewsModel.NewsList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/colorBlack"
            android:textSize="@string/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item1_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{newsList.source}"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_item1_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_item1_title" />

        <TextView
            android:id="@+id/tv_item1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{newsList.time}"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tv_item1_author"
            app:layout_constraintTop_toTopOf="@+id/tv_item1_author" />

        <ImageView
            android:id="@+id/ib_item1"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_del"
            android:onClick=""
            app:layout_constraintEnd_toEndOf="@+id/tv_item1_title"
            app:layout_constraintTop_toTopOf="@+id/tv_item1_time" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/tv_item1_author"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

