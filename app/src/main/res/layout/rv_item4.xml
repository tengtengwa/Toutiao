<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="新闻标题" />

        <LinearLayout
            android:id="@+id/ll_title_images"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_item4_title"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/iv_item4_image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:scaleType="center"
                />

            <ImageView
                android:id="@+id/iv_item4_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                />

            <ImageView
                android:id="@+id/iv_item4_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title_images"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp" >

            <TextView
                android:id="@+id/tv_item4_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:text="美味西安" />

            <TextView
                android:id="@+id/tv_item4_time"
                android:layout_toRightOf="@id/tv_item4_author"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorGray"
                android:text="发布时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:src="@drawable/cancel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_news_time"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>