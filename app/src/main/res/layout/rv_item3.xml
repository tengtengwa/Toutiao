<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="newsList"
            type="com.example.toutiao.logic.model.NewsModel.NewsList" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@{newsList.title}"
            android:textColor="@color/colorBlack"
            android:textSize="@string/text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ib_item2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_item4_image1"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            loadImage="@{newsList.images[0]}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item4_title" />

        <ImageView
            android:id="@+id/iv_item4_image2"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            loadImage="@{newsList.images[1]}"
            app:layout_constraintEnd_toStartOf="@+id/iv_item4_image3"
            app:layout_constraintStart_toEndOf="@+id/iv_item4_image1"
            app:layout_constraintTop_toTopOf="@+id/iv_item4_image1" />

        <ImageView
            android:id="@+id/iv_item4_image3"
            android:layout_width="125dp"
            android:layout_height="80dp"
            loadImage="@{newsList.images[2]}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_item4_image2" />

        <TextView
            android:id="@+id/tv_item4_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{newsList.source}"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_item4_image1" />

        <TextView
            android:id="@+id/tv_item4_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item4_author"
            android:layout_marginStart="20dp"
            android:text="@{newsList.time}"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/tv_item4_author"
            app:layout_constraintTop_toTopOf="@+id/tv_item4_author" />

        <ImageView
            android:id="@+id/ib_item2"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_del"
            android:onClick=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_item4_time" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/tv_item4_author"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

